# Archivo de configuración para servidor Linux Mint
# Sistema de Gestión Oncológica

# Variables de configuración del servidor
SERVER_NAME="hito-oncology"
DOMAIN_NAME="tu-dominio.com"
PROJECT_DIR="/var/www/html/hito_oncology"

# Configuración de base de datos
DB_HOST="localhost"
DB_NAME="oncology_database"
DB_USER="oncology_user"
DB_PASS="oncology_secure_password_2024"

# Configuración de correo
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="tu-email@gmail.com"
SMTP_PASS="tu-app-password"

# Configuración de GitHub
GITHUB_REPO="tu-usuario/hito-oncology"
GITHUB_BRANCH="main"
WEBHOOK_SECRET="oncology_webhook_secret_2024"

# Configuración de seguridad
SSL_EMAIL="tu-email@gmail.com"
BACKUP_RETENTION_DAYS="30"

# URLs del sistema
LOCAL_URL="http://localhost/hito_oncology"
PUBLIC_URL="https://${DOMAIN_NAME}"
WEBHOOK_URL="${PUBLIC_URL}:9000/hooks/deploy-oncology"

# Configuración de Cloudflare (si se usa)
CLOUDFLARE_TOKEN="tu-cloudflare-token"
CLOUDFLARE_ZONE_ID="tu-zone-id"

# Configuración de monitoreo
ALERT_EMAIL="admin@localhost"
LOG_RETENTION_DAYS="90"
